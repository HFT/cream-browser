export TOPDIR = @topdir@
export SRCDIR = $(TOPDIR)/src
export PREFIX = @prefix@
export SYSCONFDIR = @sysconfdir@

export EXEC = cream-browser

export MODULES = @modules@

export CC = @cc@
export LIBTOOL = @libtool@
export CFLAGS = -c -O2 -Wall -I $(SRCDIR)/include `pkg-config --cflags glib-2.0`
export LDFLAGS = -L$(SRCDIR)/libs `pkg-config --libs glib-2.0`

export GTK_CFLAGS  = `pkg-config --cflags gtk+-2.0`
export GTK_LDFLAGS = `pkg-config --libs gtk+-2.0`

export WEBKIT_CFLAGS  = `pkg-config --cflags webkit-1.0`
export WEBKIT_LDFLAGS = `pkg-config --libs webkit-1.0`

export LIBCONFIG_CFLAGS  = `pkg-config --cflags lua`
export LIBCONFIG_LDFLAGS = `pkg-config --libs lua`

export LIBCREAM_CFLAGS = $(LIBCONFIG_CFLAGS)
export LIBCREAM_LDFLAGS = $(LIBCONFIG_LDFLAGS)
